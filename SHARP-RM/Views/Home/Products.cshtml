<form action="../Product/AjouterProduct" method="post" enctype="multipart/form-data">
<div class="modal fade" id="ProduitForm" tabindex="-1" style="display: left;" aria-hidden="true">
											<div class="modal-dialog modal-lg">
												<div class="modal-content">
													<div class="modal-header">
