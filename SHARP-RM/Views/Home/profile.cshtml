
<main class="page-content">

            <!--breadcrumb-->
            <div class="page-breadcrumb d-none d-sm-flex align-items-center">
              <div class="breadcrumb-title pe-3 text-white">Pages</div>
              <div class="ps-3">
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item"><a href="index.jsp"><i class="bx bx-home-alt text-white"></i></a>
                    </li>
                    <li class="breadcrumb-item active text-white" aria-current="page">Profile utilisateur</li>
                  </ol>
                </nav>
              </div>
            
            </div>
            <!--end breadcrumb-->
           
            <div class="profile-cover bg-dark"></div>
  <form action="../Profile/ModifierProfile" method="post">
            <div class="row">
              <div class="col-12 col-lg-8">
                <div class="card shadow-sm border-0">
                  <div class="card-body">
                      <h5 class="mb-0">Mon Compte</h5>
                      <hr>
                      <div class="card shadow-none border">
                        <div class="card-header">
                          <h6 class="mb-0">INFORMATIONS UTILISATEUR</h6>
                        </div>
                    
                        <div class="card-body">
                          <div class="row g-3">
                             <div class="col-6">
                                <label class="form-label">Username</label>
                                <input type="text" name="username" class="form-control" value="@Session["Username"]">
                             </div>
                             <div class="col-6">
                              <label class="form-label">Email</label>
                              <input type="text" name="login" class="form-control" value="@Session["Login"]">
                            </div>
                              <div class="col-6">
                                <label class="form-label">Prenom</label>
                                <input type="text" name="prenom" class="form-control" value="@Session["prenom"]">
                            </div>
                            <div class="col-6">
                                <label class="form-label">Nom</label>
                                <input type="text" name="nom" class="form-control" value="@Session["nom"]">
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="card shadow-none border">
                        <div class="card-header">
                          <h6 class="mb-0">CONTACT UTILISATEUR</h6>
                        </div>
                        <div class="card-body">
                          <div class="row g-3">
                            <div class="col-12">
                              <label class="form-label">Addresse</label>
                              <input type="text" name="adresse" class="form-control" value="@Session["Addresse"]">
                             </div>
                             <div class="col-6">
                                <label class="form-label">City</label>
                                <input type="text" name="ville" class="form-control" value="@Session["Ville"]">
                             </div>
                             <div class="col-6">
                              <label class="form-label">Country</label>
                              <input type="text" name="pays" class="form-control" value="@Session["Pays"]">
                            </div>
                              <div class="col-14">
                                <label class="form-label">Telephone</label>
                                <input type="text" name="telephone" class="form-control" value="@Session["Telephone"]">
                            </div>
                            
                            <div class="col-12">
                              <label class="form-label">Description</label>
                              <textarea class="form-control" name="description" rows="4" cols="4" placeholder="@Session["Description"]"></textarea>
                             </div>
                          </div>
                        </div>
                      </div>
                      <div class="text-start">
                        <button type="submit" class="btn btn-primary px-4">Confirmer</button>
                      </div>
                        
                 </div>
                 
                </div>
             
              </div>
              <div class="col-12 col-lg-4">
                <div class="card shadow-sm border-0 overflow-hidden">
                  <div class="card-body">
                      <div class="profile-avatar text-center">
                        <img src="~/Content/assets/images/avatars/avatar-1.png" class="rounded-circle shadow" width="120" height="120" alt="">
                      </div>
                      <div class="d-flex align-items-center justify-content-around mt-5 gap-3">
                          
                       
                       
                      </div>
                       <div class="text-center mt-4">
						   <h4 class="mb-1">@Session["nom"]  @Session["prenom"]</h4>
						   <p class="mb-0 text-secondary">@Session["Ville"], @Session["Pays"]</p>
                        <div class="mt-4"></div>
                        <h6 class="mb-1">Admin - JRM MANAGER</h6>
                        <p class="mb-0 text-secondary">FACULTE DES SCIENCES BEN M'SICK</p>
                      </div>
                      <hr>
                      <div class="text-start">
                        <h5 class="">Description</h5>
						<p class="mb-0">
							@Session["Description"]
						</p></div>
                  </div>
               
                </div>
              </div>
            </div><!--end row-->
</form>
          </main>